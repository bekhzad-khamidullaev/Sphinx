# === Base ===
DEBUG=False
DJANGO_SECRET_KEY=your_production_secret_key
ALLOWED_HOSTS=tasks.evos.uz,www.tasks.evos.uz,127.0.0.1,localhost
CSRF_TRUSTED_ORIGINS=https://tasks.evos.uz,https://www.tasks.evos.uz
SITE_URL=https://tasks.evos.uz
LANGUAGE_CODE=ru
TIME_ZONE=Asia/Tashkent

# === Security ===
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True
X_FRAME_OPTIONS=DENY

# === PostgreSQL (used by Django + docker-compose db service) ===
POSTGRES_DB=sphinx_db_prod
POSTGRES_USER=sphinx_user
POSTGRES_PASSWORD=YourStrongDatabasePassword
SQL_ENGINE=django.db.backends.postgresql
SQL_DATABASE=sphinx_db_prod
SQL_USER=sphinx_user
SQL_PASSWORD=YourStrongDatabasePassword
SQL_HOST=db
SQL_PORT=5432

# === Redis (used for Channels and cache) ===
CHANNEL_LAYER_BACKEND=channels_redis.core.RedisChannelLayer
REDIS_URL=redis://redis:6379/0
CACHE_BACKEND=django_redis.cache.RedisCache
CACHE_LOCATION=redis://redis:6379/1

# === JWT ===
